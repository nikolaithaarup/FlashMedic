{
  "expo": {
    "name": "FlashMedic",
    "slug": "flashmedic",              // better all-lowercase
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "flashmedic",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,        // you can keep true if you want tablet layout
      "bundleIdentifier": "dk.flashmedic.app"   // ðŸ”´ CHOOSE YOUR OWN, BUT KEEP IT FIXED
    },

    "android": {
      "package": "dk.flashmedic.app",   // ðŸ”´ MATCH DOMAIN STYLE, BUT DOESN'T HAVE TO EQUAL iOS
      "versionCode": 1,                 // increment when you ship new versions
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
      // expo-linear-gradient does NOT need to be listed here
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
